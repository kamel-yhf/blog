{% extends "base.html.twig" %}
{% block body %}
	<article>
		<div class="meradata">Ecrit le
			{{article.createdAt | date('d/m/Y')}}
			à
			{{ article.createdAt | date('H:i')}}
			dans la catégorie
			{{ article.category.title }}</div>
		<h2>{{ article.title }}</h2>
		<div class="content">
			<img src={{ article.image }} alt="">
			<br>
			{{ article.content | raw}}
		</div>

		<a href="{{path('blog_edit', {'id' : article.id})}}">
			<button class="btn btn-info">Modifier l'article</button>
		</a>
	</article>
    <section id="commentaire">
        {% for comment in article.comments %}
            <div class="comment">
                <div class="row">
                    <div class="col-3">
                        {{comment.author}} (<small>{{comment.createdAt | date('d/m/Y à H:i')}}</small>)
                    </div>
                    <div class="col">
                        {{comment.content | raw}}
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>

{% endblock %}
